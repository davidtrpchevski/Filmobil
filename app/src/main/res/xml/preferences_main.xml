<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:key="bandwidth_category_key"
        app:title="Bandwidth">
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:iconSpaceReserved="false"
            app:key="data_saver_pref_key"
            app:title="Data saver" />
    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:key="customization_category_key"
        app:title="Customization">

        <ListPreference
            app:defaultValue="3"
            app:entries="@array/theming_entries"
            app:entryValues="@array/theming_values"
            app:iconSpaceReserved="false"
            app:key="theming_pref_key"
            app:title="Theming"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>